<% wrap_layout :layout do %>
  <section class="participant wide-row">
    <div class="grid-row participant-item">
      <div class="participant-image">
        <div class="image-wrap">
          <%= image_tag current_article.data.image, alt: current_article.title, class: "image" %>
        </div>
      </div>
      <div class="participant-text">
        <div>
          <h1>
            <%= current_article.title %>
          </h1>
          <p class="description">
            <%= current_article.data.description %>
          </p>
          <h4>
            Facts
          </h4>
          <div class="participant-facts">
            <% if current_article.data.origin %>
              <div class="participant-fact">
                <span class="participant-fact-label">Origin</span>
                <span class="participant-fact-value"><%= current_article.data.origin %></span>
              </div>
            <% end %>
            <% if current_article.data.origin %>
              <div class="participant-fact">
                <span class="participant-fact-label">Founded in</span>
                <span class="participant-fact-value"><%= current_article.data.founded_in %></span>
              </div>
            <% end %>
          </div>
          <div class="links">
             <% if current_article.data.www_link %>
              <a href="<%= current_article.data.www_link %>" class="icon icon-www" target="_blank"></a>
            <% end %>
            <% if current_article.data.ut_link %>
              <a href="<%= current_article.data.ut_link %>" class="icon icon-untappd" target="_blank"></a>
            <% end %>
            <% if current_article.data.fb_link %>
              <a href="<%= current_article.data.fb_link %>" class="icon icon-facebook" target="_blank"></a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="grid-row back-link">
      <%= partial "partials/button", locals: { to: "/line-up/index.html",
                                               variant: "size-medium style-solid",
                                               icon_left: "icons/arrow-left.svg",
                                               text: "Full Line-up"} %>
    </div>
  </section>
<% end %>
