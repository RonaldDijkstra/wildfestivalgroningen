<div id="modal-<%= participant.id %>" class="modal modal-bg" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <h2>
        <%= participant.title %>
      </h2>

      <% if participant.image %>
        <p>
          <%= image_tag "participants/#{participant.image}", alt: participant.title, class: "image participant-image" %>
        </p>
      <% end %>

      <p class="description">
        <%= participant.description %>
      </p>

      <% if participant.origin || participant.founded_in %>
        <div class="facts">
          <h3>
            Facts
          </h3>
          <div class="facts-cols"%>
          <% if participant.origin %>
            <div class="col">
              <div class="label">
                Type
              </div>
              <div>
                <%= participant.type %>
              </div>
            </div>
          <% end %>
          <% if participant.origin %>
            <div class="col">
              <div class="label">
                Origin
              </div>
              <div>
                <%= participant.origin %>
              </div>
            </div>
          <% end %>
          <% if participant.founded_in %>
            <div class="col">
              <div class="label">
                Founded in
              </div>
              <div>
                <%= participant.founded_in %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <a href="" class="modal-close">
        <svg class="" viewBox="0 0 24 24"><path d="M19 6.41l-1.41-1.41-5.59 5.59-5.59-5.59-1.41 1.41 5.59 5.59-5.59 5.59 1.41 1.41 5.59-5.59 5.59 5.59 1.41-1.41-5.59-5.59z"/><path d="M0 0h24v24h-24z" fill="none"/></svg>
      </a>
    </div>
  </div>
</div>
